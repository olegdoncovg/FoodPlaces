<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/list_margin_start_end"
    android:layout_marginEnd="@dimen/list_margin_start_end"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/suggestion_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/rounded_radius"
        android:background="@drawable/rounded_corners_all_bg"
        android:clickable="true"
        android:foreground="@drawable/ripple_effect"
        android:padding="@dimen/rounded_radius"
        android:textColor="@color/black"
        android:textSize="16sp" />

</LinearLayout>